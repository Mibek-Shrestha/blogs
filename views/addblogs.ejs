<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <h1>Blog Post Submission Form</h1>

    <form action="submit_blog.php" method="post">
      <!-- Blog Title -->
      <label for="blogTitle">Blog Title:</label>
      <input type="text" id="blogTitle" name="blogTitle" required />
      <br />

      <!-- Blog Snippet -->
      <label for="blogSnippet">Blog Snippet (Brief Description):</label>
      <br />
      <textarea
        id="blogSnippet"
        name="blogSnippet"
        rows="4"
        required
      ></textarea>
      <br />

      <!-- Blog Body -->
      <label for="blogBody">Blog Body:</label>
      <br />
      <textarea id="blogBody" name="blogBody" rows="10" required></textarea>
      <br />

      <!-- Submit Button -->
      <button type="submit">Submit</button>
    </form>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
